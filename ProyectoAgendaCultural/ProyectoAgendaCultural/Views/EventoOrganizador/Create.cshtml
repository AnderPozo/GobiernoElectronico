@model ProyectoAgendaCultural.Models.EventoOrganizador

@{
    ViewBag.Title = "Create";
}

<link href="~/Content/estilo_menuVertical.css" rel="stylesheet" />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <!--Menu de administrador-->
            @{Html.RenderPartial("_menuVertical");}
            <hr class="hidden-sm hidden-md hidden-lg">
        </div>
        <div class="col-sm-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2 style="color:black">Publicar evento (Organizadores)</h2>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-10">
                            <h4><b>Información del organizador del evento</b></h4>
                            <h5>Los campos marcados con (*) son obligatorios</h5>
                            <hr />
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="clearfix" style="background-color: #00b5e4">
                                    <h5 style="margin-left:10px"><b>EVENTO</b></h5>
                                </div>
                                <br />
                            </div>
                            <div class="col-md-10">
                                <p style="font-weight:bold">Seleccione el evento o cree uno nuevo</p>
                                @Html.DropDownList("EventoId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EventoId, "", new { @class = "text-danger" })
                                <br />
                                <a class="btn btn-default" href="/Evento/Create" style="background-color: #00b5e4"><b>Agregar evento</b></a>
                                <br />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="clearfix" style="background-color: #00b5e4">
                                    <h5 style="margin-left:10px"><b>ORGANIZADOR</b></h5>
                                </div>
                                <br />
                            </div>
                            <div class="col-md-10">
                                <p style="font-weight:bold">Seleccione la entidad organizadora o cree una nueva</p>
                                @Html.DropDownList("OrganizadorId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.OrganizadorId, "", new { @class = "text-danger" })
                                <br />
                                <a class="btn btn-default" href="/Organizador/Create" style="background-color: #00b5e4"><b>Agregar organizador</b></a>
                                <br />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Guardar y continuar" class="btn btn-lg btn-success" />
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
