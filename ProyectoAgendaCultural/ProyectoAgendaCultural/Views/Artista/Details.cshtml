@model ProyectoAgendaCultural.Models.Artista


<h2>Sobre mi</h2>
<h4>@Model.Nombres @Model.Apellidos</h4>
<h5>@Html.DisplayFor(model => model.Fecha_nacimiento)</h5>
<h5>@Model.Disciplina</h5>
<div>
    <img src="~/Resources/ImagenesArtistas/@Model.Imagen" height="250" width="358">
</div>
<p>@Model.Descripcion</p>
<br />
<h4><b>Mis redes sociales</b></h4>
<ul class="nav nav-pills nav-stacked">
    <li class="active"><a href="@Model.Instagram" target="_blank">Instagram</a></li>
    <li><a href="@Model.Facebook" target="_blank">Facebook</a></li>
    <li><a href="@Model.Twitter" target="_blank">Twitter</a></li>
</ul>
<br />
<h4><b>Contactos</b></h4>
<div>
    <h5><b>Correo: </b>@Model.Email</h5>
    <h5><b>Telefono: </b>@Model.Telefono</h5>
</div>
<br />
<h4><b>Otros artistas</b></h4>
<div class="row">
    <a href=""><img src="~/Resources/ImagenesArtistas/@Model.Imagen" alt="Avatar" class="avatar" title="@Model.Nombres @Model.Apellidos"></a>
</div>
<hr class="hidden-sm hidden-md hidden-lg">

