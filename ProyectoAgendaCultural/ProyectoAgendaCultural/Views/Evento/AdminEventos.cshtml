@model IEnumerable<ProyectoAgendaCultural.Models.Evento>

@{
    ViewBag.Title = "AdminEventos";
}

<link href="~/Content/estilo_menuVertical.css" rel="stylesheet" />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <!--Menu de administrador-->
            @{Html.RenderPartial("_menuVertical");}
            <hr class="hidden-sm hidden-md hidden-lg">
        </div>
        <div class="col-sm-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2 style="color:black">Listado de eventos</h2>
                </div>
                <div class="panel-body">
                    <p>
                        @Html.ActionLink("Crear nuevo evento", "Create")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Categoria.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Lugar.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Informacion_pago)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Informacion_adicional)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lugar.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Informacion_pago)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Informacion_adicional)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Detalles", "Detalles", new { id = item.Id }) |
                                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>