@model ProyectoAgendaCultural.Models.Evento

@{
    ViewBag.Title = "Delete";
}

<link href="~/Content/estilo_menuVertical.css" rel="stylesheet" />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <!--Menu de administrador-->
            @{Html.RenderPartial("_menuVertical");}
            <hr class="hidden-sm hidden-md hidden-lg">
        </div>
        <div class="col-sm-9">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h2 style="color:black">Eliminar evento</h2>
                </div>
                <div class="panel-body">
                    <h3>Esta seguro de borrar este registro?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Categoria.Nombre)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Categoria.Nombre)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Lugar.Nombre)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Lugar.Nombre)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Informacion_pago)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Informacion_pago)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Informacion_adicional)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Informacion_adicional)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Imagen)
                            </dt>

                            <dd>
                                <img src="~/Resources/ImagenesEventos/@Model.Imagen" height="350" width="350" />
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Borrar" class="btn btn-danger" /> |
                                @Html.ActionLink("Regresar al listado", "Index")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

