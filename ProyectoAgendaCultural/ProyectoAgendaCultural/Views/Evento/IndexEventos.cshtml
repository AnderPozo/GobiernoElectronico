@model IEnumerable<ProyectoAgendaCultural.Models.ClasesSP.SPEventos>

@{
    ViewBag.Title = "IndexEventos";
}
<br />
<br />
<div class="container">
    <h1><b>MONTÚFAR CULTURAL</b></h1>
    <h4>Bienvenido a la página oficial de eventos culturales del cantón Montúfar</h4>
    <hr style="border-color:#00b5e4;" />
    <!--SALIDER-->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Resources/imag_slider/pintura.jpg" alt="MontufarCultural">
                <div class="carousel-caption">
                    <h3>Montúfar Cultural</h3>
                    <p>Descubre nuevos eventos y participa en ellos</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Resources/imag_slider/teatro2.jpg" alt="Teatro municipal">
                <div class="carousel-caption">
                    <h3>Teatro municipal</h3>
                    <p>Teatro municipal de la ciudad de Montúfar</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Resources/imag_slider/mascara.jpg" alt="Cultura Montufareña">
                <div class="carousel-caption">
                    <h3>Cultura Montufareña</h3>
                    <p>Se participe de los eventos culturales parte de nuestra identidad</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!--FIN SLIDER-->
    <hr style="border-color:#00b5e4" />
    <h2>Eventos agregados recientemente</h2>
    <h5><i>No te pierdas los eventos del momento, da clic en el nombre del evento para conocer más información</i></h5>
    <div class="main">

        <div class="container">
        </div>
        <br />
        @if (Model.Count() == 0)
        {
            <br />
            <br />
            <br />
            <br />
            <div class="contenedor_botonEv">
                <img src="~/Resources/imag_barra/Informacion.png" height="100" width="100" />
                <h2>NO HAY EVENTOS QUE MOSTRAR</h2>
            </div>
            <br />
            <br />
            <br />
            <br />
        }
        else
        {
            foreach (var item in Model)
            {
                if (item.Id_evento == Model.Max(i => i.Id_evento))
                {
                    <!-- Portfolio Gallery Grid -->
                    <div class="content">
                        <div class="text-center">
                            <img src="~/Resources/ImagenesEventos/@item.Imagen" alt="Bear" style="width:75%">
                        </div>

                        <a href="/Evento/Detalles/@item.Id_evento"><h3>@item.Nombre_evento</h3></a>
                        <p>
                            @item.Descripcion
                        </p>
                        <p>
                            <b>Fecha: </b> @Html.DisplayFor(modelItem => item.Fecha_evento)
                        </p>
                    </div>
                }
            }

            <br />

            <div class="fila">
                @foreach (var item in Model)
                {
                    if (item.Id_evento != Model.Max(i => i.Id_evento))
                    {

                        <div class="columna_galeria">
                            <div class="content">
                                <img src="~/Resources/ImagenesEventos/@item.Imagen" alt="@item.Nombre_evento" style="width:100%">
                                <div class="container_texto">
                                    <a href="/Evento/Detalles/@item.Id_evento"><h3>@item.Nombre_evento</h3></a>
                                </div>
                                <p>
                                    <b>Fecha: </b> @Html.DisplayFor(modelItem => item.Fecha_evento)
                                </p>
                                <p>
                                    <b>Categoría: </b>@item.Categoria
                                </p>
                            </div>
                        </div>
                    }

                }
            </div>
        }
    </div>
    <br />
    <br />
    <div class="contenedor_botonEv">
        <a class="botonEv listar" href="/Evento/ListaEventos">Todos los eventos</a>
    </div>
</div>