@model ProyectoAgendaCultural.Models.Direccion

@{
    ViewBag.Title = "Create";
}

<link href="~/Content/estilo_menuVertical.css" rel="stylesheet" />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <!--Menu de administrador-->
            @{Html.RenderPartial("_menuVertical");}
            <hr class="hidden-sm hidden-md hidden-lg">
        </div>
        <div class="col-sm-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2 style="color:black">Dirección</h2>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-10">
                            <h4><b>Información de ciudad</b></h4>
                            <h5>Los campos marcados con (*) son obligatorios</h5>
                            <h5>Antes de ingresar la dirección debes ingresar la provincia y ciudad</h5>
                            <hr />
                        </div>
                        <div class="form-group">                           
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nombre_direccion, new { htmlAttributes = new { @class = "form-control",placeholder="Ingresa dirección" } })
                                @Html.ValidationMessageFor(model => model.Nombre_direccion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Distrito, new { htmlAttributes = new { @class = "form-control", placeholder="Ingresa el distrito de la dirección Norte/Sur ..." } })
                                @Html.ValidationMessageFor(model => model.Distrito, "", new { @class = "text-danger" })
                                <hr />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <p style="font-weight:bold">Elige la ciudad la que pertenece la dirección o crea una nueva</p>
                                @Html.DropDownList("CiudadId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CiudadId, "", new { @class = "text-danger" })
                                <br />
                                <a class="btn btn-default" href="/Ciudad/Create" style="background-color: #00b5e4"><b>Agregar ciudad</b></a>
                                <br />
                                <hr />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Crear dirección" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>    
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
