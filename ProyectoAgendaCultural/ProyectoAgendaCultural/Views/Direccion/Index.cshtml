@model IEnumerable<ProyectoAgendaCultural.Models.Direccion>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/estilo_menuVertical.css" rel="stylesheet" />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <!--Menu de administrador-->
            @{Html.RenderPartial("_menuVertical");}
            <hr class="hidden-sm hidden-md hidden-lg">
        </div>
        <div class="col-sm-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2 style="color:black">Listado de direcciones</h2>
                </div>
                <div class="panel-body">

                    <p>
                        @Html.ActionLink("Crear nueva dirección", "Create")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Ciudad.Nombre_ciudad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre_direccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Distrito)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ciudad.Nombre_ciudad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre_direccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Distrito)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
